<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Golden Rummy | Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      content="Premium Multipurpose Admin & Dashboard Template"
      name="description"
    />
    <meta content="Themesbrand" name="author" />
    <link rel="shortcut icon" href="/images/favicon.ico" />
    <link
      href="/css/bootstrap.min.css"
      id="bootstrap-style"
      rel="stylesheet"
      type="text/css"
    />
    <!-- Icons Css -->
    <link href="/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link
      href="/css/app.min.css"
      id="app-style"
      rel="stylesheet"
      type="text/css"
    />
  </head>

  <body>
    <div class="account-pages my-5 pt-sm-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card overflow-hidden">
              <% if(message.danger){ %>
              <div class="alert alert-danger" role="alert">
                <%= message.danger %>
              </div>
              <% } %>
              <div class="card-body pt-0">
                <h3 class="text-center mt-4"></h3>

                <div class="p-3">
                  <div class="text-center">
                      <img class="rounded-circle" src="<%= APP_URL%>images/rummy.png" alt="Logo" height="100" width="100" >
                  </div>
                  <h4 class="text-muted font-size-18 mb-1 text-center">
                    Welcome Back !
                  </h4>
                  <p class="text-muted text-center">
                    Sign in to continue to Golden Rummy
                  </p>
                  <form
                    class="form-horizontal mt-4"
                    action="/mgp-rummy/api/admin/login"
                    method="post"
                  >
                    <div class="form-group">
                      <label for="username">Email</label>
                      <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        placeholder="Enter email"
                      />
                    </div>
                    <div class="form-group">
                      <label for="userpassword">Password</label>
                      <input
                        type="password"
                        class="form-control"
                        id="userpassword"
                        name="password"
                        placeholder="Enter password"
                      />
                    </div>
                    <div class="form-group row mt-4">
                      <div class="col-6 text-left">
                        <button
                          class="btn btn-primary w-md waves-effect waves-light"
                          type="submit"
                        >
                          Log In
                        </button>
                      </div>
                    </div>
                    <div class="form-group mb-0 row">
                      <div class="col-12 mt-4"></div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <div class="mt-5 text-center"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- JAVASCRIPT -->
    <script src="/libs/jquery/jquery.min.js"></script>
    <script src="/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/libs/jquery-sparkline/jquery.sparkline.min.js"></script>
    <!-- App js -->
    <script src="/js/app.js"></script>
    <script>
      $(document).ready(function () {
        $(".alert-success").delay(2000).slideUp(300);
      });
      $(document).ready(function () {
        $(".alert-danger").delay(2000).slideUp(300);
      });
    </script>
  </body>
</html>
